<%- include('../partials/doctype.ejs') %>

<head>
    <%- include('../partials/header') %>
    <title><%= page.display %></title>
    <%- include('../partials/css') %>
</head>



<body id="kt_body" class="header-fixed">
    <script>
        var defaultThemeMode = "light";
        var themeMode;
        if (document.documentElement) {
            if (document.documentElement.hasAttribute("data-bs-theme-mode")) {
                themeMode = document.documentElement.getAttribute("data-bs-theme-mode");
            } else {
                if (localStorage.getItem("data-bs-theme") !== null) {
                    themeMode = localStorage.getItem("data-bs-theme");
                } else {
                    themeMode = defaultThemeMode;
                }
            }
            if (themeMode === "system") {
                themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
            }
            document.documentElement.setAttribute("data-bs-theme", themeMode);
        }
    </script>
    <div class="d-flex flex-column flex-root">
        <div class="page d-flex flex-row flex-column-fluid">
            <%- include('../partials/sidebar') %>
            <div class="wrapper d-flex flex-column flex-row-fluid" id="kt_wrapper">
                <%- include('../partials/navbar') %>
                <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                    <div class="container-xxl" id="kt_content_container">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="py-10">
                                    <h1 class="anchor fw-bold mb-5" id="form-control" data-kt-scroll-offset="50">Tanımlamalar</h1>
                                    <div class="py-5">
                                        <div class="rounded border p-10">
                                            <div class="d-flex flex-wrap align-items-center mb-5">
                                                <div id="version">
                                                    <div class="fs-6 fw-bold mb-1">Uygulama Sürümü</div>
                                                    <div class="fw-semibold text-gray-600">v<%= version %></div>
                                                </div>
                                                <div id="version-button" class="ms-auto">
                                                    <button class="btn btn-light btn-active-light-primary">Güncellemeleri Denetle</button>
                                                </div>
                                            </div>
                                            <div class="mb-2">
                                                <label class="form-label">Servis</label>
                                                <input type="url" class="form-control" placeholder="<%- url ? '<secret>' : '' %>">
                                            </div>
                                            <div class="mb-2">
                                                <label class="form-label">Sunucu</label>
                                                <input type="rmq" class="form-control" placeholder="<%- rmq ? '<secret>' : '' %>">
                                            </div>
                                            <div class="mb-2">
                                                <label class="form-label">Key</label>
                                                <input type="uuid" class="form-control" value="<%= uuid %>">
                                            </div>
                                            <div class="mb-4">
                                                <label class="form-label">Port</label>
                                                <input type="port" class="form-control" value="<%= port %>">
                                            </div>
                                            <div class="mb-4">
                                                <label class="form-label">Klasör Konumu (Farklı klasör konumlarını ; ile ayırınız)</label>
                                                <input type="path" class="form-control" value="<%= path %>">
                                            </div>
                                            <div class="mb-4">
                                                <label class="form-label">Hariç tutulacak anahtar kelimeler (; işareti ile ayırınız)</label>
                                                <input type="excludeKeys" class="form-control" value="<%= excludeKeys %>">
                                            </div>
                                            <div class="mb-5">
                                                <div class="form-check form-switch form-check-custom form-check-success form-check-solid">
                                                    <input class="form-check-input" type="checkbox" id="auto-launch" <%- autoLaunch ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="auto-launch">
                                                        <b>Uygulama başlangıçta otomatik başlasın</b>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="mb-2">
                                                <button id="save-settings" class="btn btn-bg-light btn-icon-success btn-text-success me-2 mb-2  hover-rotate-start">
                                                    <i class="ki-duotone ki-abstract-43">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                    </i>
                                                    Kaydet
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%- include('../partials/footer') %>
            </div>
        </div>
    </div>

    <script>
        if (typeof module === 'object') {
            window.module = module;
            module = undefined;
        }
    </script>
    <%- include('../partials/javascript') %>
    <script src="assets/js/views/settings.js"></script>
    <script>
        if (window.module) module = window.module;
    </script>
</body>

</html>
