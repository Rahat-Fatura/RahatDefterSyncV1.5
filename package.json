{
  "name": "rahatdeftersync",
  "version": "0.0.2",
  "description": "An app for rahatsistem.com.tr",
  "main": "src/index.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "nodemon --watch . --exec electron .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "build": "electron-builder --win --ia32 --x64",
    "release": "electron-builder --win -p always"
  },
  "dependencies": {
    "adm-zip": "^0.5.14",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "auto-launch": "^5.0.6",
    "axios": "^1.6.2",
    "bytes": "^3.1.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "ejs": "~2.6.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "express": "~4.16.1",
    "helmet": "^7.1.0",
    "http-errors": "~1.6.3",
    "http-status": "^1.7.3",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "morgan": "~1.9.1",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "prettier": "^3.1.0"
  },
  "author": "Berkay Gökçe",
  "license": "ISC",
  "build": {
    "appId": "com.rahatsistem.rahat-defter-synchronization",
    "productName": "RahatDefterSync",
    "publish": [
      {
        "provider": "github"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  }
}
